{
  "name": "mimmi20/template",
  "description": "Provides a GitHub repository template for a PHP library, using GitHub actions.",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Thomas MÃ¼ller",
      "homepage": "https://github.com/mimmi20",
      "role": "Developer"
    },
    {
      "name": "Contributors",
      "homepage": "https://github.com/mimmi20/template/graphs/contributors"
    }
  ],
  "homepage": "https://github.com/mimmi20/template",
  "support": {
    "issues": "https://github.com/mimmi20/template/issues",
    "source": "https://github.com/mimmi20/template"
  },
  "require": {
    "php": "^8.1.0",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "ext-dom": "*",
    "ext-simplexml": "*",
    "ext-tokenizer": "*",
    "ext-xml": "*",
    "ext-xmlwriter": "*",
    "infection/infection": "^0.26.19",
    "mimmi20/coding-standard": "4.0.0-beta.6",
    "nikic/php-parser": "^v4.15.3",
    "phpstan/extension-installer": "^1.2.0",
    "phpstan/phpstan": "^1.10.3",
    "phpstan/phpstan-deprecation-rules": "^1.1.2",
    "phpstan/phpstan-phpunit": "^1.3.9",
    "phpunit/phpunit": "^10.0.13"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist",
    "lock": false,
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true,
      "infection/extension-installer": true
    }
  }
}
